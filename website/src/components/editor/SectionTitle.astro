---
const { id, title, n } = Astro.props;
---

<div data-section-title={title} class:list={[n > 1 && "mt-14", "mb-8 z-0"]}>
  <div class="relative">
    <div class="absolute max-md:full-bleed md:w-full bg-rose-500 h-full -z-10">
    </div>
    <div
      class="flex px-2 md:px-3 gap-2 text-lg leading-[1.1] md:text-xl md:leading-[1.1] font-bold text-white font-mont uppercase py-3"
    >
      <p>{n}.</p>
      <h1 id={id} class="">{title}</h1>
    </div>
  </div>
</div>
